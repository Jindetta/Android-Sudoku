<resources>
    <!-- Application -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom styles -->
    <style name="SudokuGrid">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingLeft">1dp</item>
    </style>

    <style name="SudokuCell" parent="android:Widget.TextView">
        <item name="android:textColor">@color/cellDefaultFont</item>
        <item name="android:textSize">@dimen/cellTextSize</item>
        <item name="android:background">@drawable/cell</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SudokuSelector" parent="android:Widget.Button">
        <item name="android:layout_weight">0.1</item>
        <item name="android:onClick">updateCellValue</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
</resources>
